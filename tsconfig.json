{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "lib": ["ES2020", "DOM"],
    "types": ["vite/client", "google.maps"],
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "**/*.save",
    "**/backup/**",
    "**/old/**",
    "**/temp/**",
    "**/archive/**",
    "**/home.tsx",
    "**/availability.tsx",
    "**/appshell.tsx",
    "**/appheader.tsx"
  ]
}
